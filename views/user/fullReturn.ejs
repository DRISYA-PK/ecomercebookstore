<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="css/fullreturn.css">

<h1>Return Products from Order</h1>
  <input type="hidden" id="orderId" value="<%= order._id %>">
  <input type="hidden" id="customerId" value="<%= order.userId %>">
  
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Return</th>
      </tr>
    </thead>
    <tbody>
      <% order.items.forEach(item => { %>
        <tr>
          <td><%= item.product.name %></td>
          <td>₹<%= item.product.salePrice.toFixed(2) %></td>
          <td>
            <input type="checkbox" name="productId" value="<%= item.product._id %>" class="product-checkbox" data-price="<%= item.product.salePrice %>">
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <p>coupon Discount ₹<span id="coupon-discount"><%=order.couponDiscount%></span></p>
  <h6>discount amount will deduct in any return </h6>
  <label for="reason">Reason for Return:</label>
  <textarea name="reason" id="reason" required></textarea>

  <h3>Total Amount for Return: ₹<span id="total-amount">0.00</span></h3>

  <button type="button" onclick="submitReturn()">Submit Return</button>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="js/fullreturn.js"></script>

<%- include("../../views/partials/user/footer") %>
