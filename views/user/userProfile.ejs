        .sidebar h2 {
            margin-top: 0;
            font-size: 20px;
            color: #333;
            text-align: center;
        }

        #profilePhoto {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin: 10px auto;
            display: block;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid #ddd;
        }


        /* Hide the actual file input */
        #fileInput {
            display: none;
        }


        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: #007bff;
            font-size: 16px;
        }

        .sidebar ul li a:hover {
            color: #0056b3;
        }

        .sidebar ul li a:active {
            color: #0056b3;
            font-weight: bold;
        }

        .content {
            flex: 1;
            padding: 20px;
        }

        .content h2 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .form-group .gender {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .form-group .gender label {
            font-weight: normal;
        }

        .edit-link {
            float: right;
            color: #007bff;
            cursor: pointer;
            font-size: 14px;
        }

        .edit-link:hover {
            text-decoration: underline;
        }

        #edit {
            color: blue;
            font-size: 20px;
        }

        /* Common Button Styling */
        .btn {
            padding: 5px 5px;
            width: 120px;
            height: 40px;
            ;
            border: none;
            border-radius: 20px;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        /* Submit Button */
        .submit-btn {
            background-color: #6bcf60;
            color: white;
        }

        .submit-btn:hover {
            background-color: #55a14e;
        }

        /* Cancel Button */
        .cancel-btn {
            background-color: #ff5e5e;
            color: white;
        }

        .cancel-btn:hover {
            background-color: #e14c4c;
        }

        .buttons {
            visibility: hidden;
        }
        .error {
    color: red;
    font-size: 0.9em;
    margin-top: 5px;
  }
        /* Responsive Design for smaller screens */
        @media (max-width: 500px) {
            .btn {
                font-size: 14px;
                padding: 4px 10px;
            }
