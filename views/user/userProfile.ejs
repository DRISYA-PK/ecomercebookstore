                        if (response.ok) {
                            
                            Swal.fire('Profile Updated');
                        } else {
                            Swal.fire('updated fail');
                        }
                    } catch (error) {
                        console.error('Upload failed', error);
                       // Swal.fire('try again');
                    }

    
}


        </script>


