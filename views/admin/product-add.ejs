function getSaleValue(newValue) {
    const regularPrice=document.getElementById("regularPrice").value;
   // console.log("iiiii",newValue)
 
    let saleValue=(newValue/100)*regularPrice;
    //console.log(saleValue)
    document.getElementById("salePrice").value=regularPrice-saleValue
    
}

function getdiscount(newValue) {
    const regularPrice=document.getElementById("regularPrice").value;
    let value=regularPrice-newValue;
    let discount=(value*100)/regularPrice;
    const categorydiscount=parseFloat(document.getElementById("categorydiscount").value)||0;

    document.getElementById("productOffer").value=discount-categorydiscount;
    
}

