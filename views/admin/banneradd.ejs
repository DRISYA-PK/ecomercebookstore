    <div class="banner-container">
        <div class="banner-header">
            <h1>Create New Banner1</h1>
            <p>Design an engaging banner for your website</p>
        </div>
        <form id="bannerForm" action="/banners/add" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Banner Title</label>
                <input type="text" id="title" name="title" class="form-control" required>
            </div>
            
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" class="form-control" rows="3"></textarea>
            </div>
            
          
            
            <div class="form-group">
                <label>Upload Banner Image</label>
                <div class="file-upload">
                    <input type="file" id="bannerImage" name="bannerImage" accept="image/*" required>
                    <p>Drag and drop or click to upload</p>
                    <p style="font-size: 0.8em; color: #888;">Supported formats: PNG, JPEG, WebP</p>
                    <div id="imagePreview"></div>
                </div>
           </div>
            
            <button type="submit" class="submit-btn">Create Banner</button>
        </form>
